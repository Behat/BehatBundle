{
    "name": "behat/behat-bundle",
    "type": "symfony-bundle",
    "description": "Behat bundle for Symfony2",
    "keywords": ["BDD", "Behat"],
    "homepage": "http://docs.behat.org/bundle/index.html",
    "license": "MIT",
    "authors": [
        {
            "name": "Konstantin Kudryashov",
            "email": "ever.zet@gmail.com"
        }
    ],

    "require": {
        "php":                       ">=5.3.2",
        "behat/behat":               ">=2.3.1,<=2.3.5",
        "symfony/framework-bundle":  ">=2.0.0"
    },

    "suggest": {
        "behat/mink-bundle": "*"
    },

    "autoload": {
        "psr-0": { "Behat\\BehatBundle": "" }
    },

    "target-dir": "Behat/BehatBundle"
}
